package classifier;

import java.awt.BorderLayout;
import java.awt.Container;
import java.awt.FlowLayout;

import javax.swing.*;
import javax.swing.plaf.FileChooserUI;

public class ClassifierGUI extends JFrame{
	final JFileChooser fc = new JFileChooser(); 
	private JButton button1;
	private JButton button2;
	private JButton fileChooser;
	private JFrame frame; 
	private JLabel[] labels = new JLabel[3];
	private JTextArea textarea = new JTextArea(5,50);
	private JFrame bottom;
	private JFrame middle;
	private JFrame top;
	
	public ClassifierGUI(){
		super("ClassifierGUI");
		setSize(600,600);
		setLayout(new FlowLayout());
	}
	
	public void init(Container frame){
		bottom = new JFrame();
		middle = new JFrame();
		top = new JFrame();
		for(int i = 0; i < labels.length; i++){
			labels[i] = new JLabel();
			//frame.add(labels[i]);
		}
		labels[1].setText("Enter an input in the textarea or choose "
				+ "a file and choose test or train to test or train the classifier");
		top.add(labels[1]);
		button1 = new JButton("Train");
		button2 = new JButton("Test");
		fileChooser = new JButton("Choose File");
		
		
		labels[0].setText("OR: Enter a classifiable sentence");
		middle.add(labels[0]);
		middle.add(textarea);
		textarea.setText("Test");
		textarea.setLocation(100, 300);
		textarea.setSize(200,200);
		button1.setLocation(100, 250);
		button1.setSize(100, 30);
		bottom.add(button1);
		button2.setLocation(100, 100);
		button2.setSize(100, 30);
		System.out.println(button2.getLocation().y);
		System.out.println(button2.getSize().height);
		bottom.add(button2);
		frame.add(top,BorderLayout.CENTER);
		frame.add(middle,BorderLayout.CENTER);
		frame.add(bottom,BorderLayout.SOUTH);
	}
	public static void main(String[] args){
		ClassifierGUI frame = new ClassifierGUI();
		frame.init(frame.getContentPane());
	}
}